{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": false,
    "module": "ES2020",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "importHelpers": true,
    "noEmitOnError": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [],
    "baseUrl": "./",
    "paths": {
      "@app/*": ["src/app/*"],
      "@environments/*": ["src/environments/*"]
    },
    "outDir": "./out-tsc/app"
  },
  "files": [],
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.spec.ts", "src/test.ts"]
}
