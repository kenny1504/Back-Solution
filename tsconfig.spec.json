{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2020",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "importHelpers": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["jasmine", "node"],
    "baseUrl": "./",
    "outDir": "./out-tsc/spec"
  },
  "files": [
    "src/test.ts",
    "src/polyfills.ts"
  ],
  "include": ["src/**/*.spec.ts", "src/**/*.d.ts"]
}
